{% extends "base.twig" %}

{% block content %}

	<div class="content-wrapper">
		<article {{ function( 'post_class' ) }} id="tease-{{ post.ID }}">

			{% include 'parts/single-title.twig' %}

			{% do action( 'shoestrap/entry/meta' ) %}

			{% do action( 'shoestrap/page/pre_content' ) %}
			{{ post.content }}
			{{ framework.clearfix }}
			{% do action( 'shoestrap/page/after_content' ) %}

		</article>

	</div> <!-- /content-wrapper -->

{% endblock %}
