{% macro column_classes(sizes) %}
	{% if sizes is iterable %}
		{% for size in sizes %}
			{% if size.mobile %} u-1 u-sm-{{ size.mobile * 2 }}-24 {% endif %}
			{% if size.tablet %} u-1 u-sm-{{ size.tablet * 2 }}-24 {% endif %}
			{% if size.medium %} u-1 u-md-{{ size.medium * 2 }}-24 {% endif %}
			{% if size.large %} u-1 u-lg-{{ size.large * 2 }}-24 {% endif %}
		{% endfor %}
	{% endif %}
{% endmacro %}
