{#<?php#}
{% extends "base.twig" %}

{% block content %}

	{% do action( 'maera/index/begin' ) %}

	{% for post in posts %}
		{% do action( 'maera/in_loop/begin' ) %}
		{% include ['content-'~post.post_type~'.twig', 'content.twig'] %}
		{% do action( 'maera/in_loop/end' ) %}
	{% endfor %}

	{% include 'pagination.twig' %}

	{% do action( 'maera/index/end' ) %}

{% endblock %}
