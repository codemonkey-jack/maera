	{% do action('bbp_template_before_user_details') %}

	<div id="bbp-single-user-details">
		<div id="bbp-user-avatar">

			<span class='vcard'>
				<a class="url fn n" href="{{ function('bbp_user_profile_url') }}" title="{{ function('bbp_topic_favorite_link','display_name' ) }}" rel="me">
					{{ __( function('get_avatar', function('bbp_get_displayed_user_field','user_email', 'raw'))|apply_filters( 'bbp_single_user_details_avatar_size', 150 )) }}
				</a>
			</span>

		</div><!-- #author-avatar -->

		<div id="bbp-user-navigation">
			<ul>
				<li class="{% if function('bbp_is_single_user_profile') %}current{% endif %}">
					<span class="vcard bbp-user-profile-link">
						<a class="url fn n" href="{{ function('bbp_user_profile_url') }}" title="{{ __('%s\'s Profile', 'bbpress')|format(function('bbp_get_displayed_user_field', 'display_name')) }}" rel="me">{{ __('Profile', 'bbpress') }}</a>
					</span>
				</li>

				<li class="{% if function('bbp_is_single_user_topics') %}current{% endif %}">
					<span class='bbp-user-topics-created-link'>
						<a href="{{ function('bbp_user_topics_created_url') }}" title="{{ __('%s\'s Topics Started', 'bbpress')|format(function('bbp_get_displayed_user_field', 'display_name')) }}">{{ __('Topics Started', 'bbpress') }}</a>
					</span>
				</li>

				<li class="{% if function('bbp_is_single_user_replies') %}current{% endif %}">
					<span class='bbp-user-replies-created-link'>
						<a href="{{ function('bbp_user_replies_created_url') }}" title="{{ __('%s\'s Replies Created', 'bbpress')|format(function('bbp_get_displayed_user_field', 'display_name')) }}">{{ __('Replies Created', 'bbpress') }}</a>
					</span>
				</li>

				{% if function('bbp_is_favorites_active') %}
					<li class="{% if function('bbp_is_favorites') %}current{% endif %}">
						<span class="bbp-user-favorites-link">
							<a href="{{ function('bbp_favorites_permalink') }}" title="{{ __('%s\'s Favorites', 'bbpress')|format(function('bbp_get_displayed_user_field', 'display_name')) }}">{{ __('Favorites', 'bbpress') }}</a>
						</span>
					</li>
				{% endif %}

				{% if function('bbp_is_user_home') or function('current_user_can','edit_users') %}

					{% if function('bbp_is_subscriptions_active') %}
						<li class="{% if function('bbp_is_subscriptions') %}current{% endif %}">
							<span class="bbp-user-subscriptions-link">
								<a href="{{ function('bbp_subscriptions_permalink') }}" title="{{ __('%s\'s Subscriptions', 'bbpress')|format(function('bbp_get_displayed_user_field', 'display_name')) }}">{{ __('Subscriptions', 'bbpress') }}</a>
							</span>
						</li>
					{% endif %}

					<li class="{% if function('bbp_is_single_user_edit') %}current{% endif %}">
						<span class="bbp-user-edit-link">
							<a href="{{ function('bbp_user_profile_edit_url') }}" title="{{ __('%s\'s Profile', 'bbpress')|format(function('bbp_get_displayed_user_field', 'display_name')) }}">{{ __('Edit', 'bbpress') }}</a>
						</span>
					</li>

				{% endif %}

			</ul>
		</div><!-- #bbp-user-navigation -->
	</div><!-- #bbp-single-user-details -->

	{% do action('bbp_template_after_user_details') %}
