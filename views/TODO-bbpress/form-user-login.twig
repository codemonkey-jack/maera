<form method="post" action="{{ function('bbp_wp_login_action', [{'context':'login_post')}]) }}" class="bbp-login-form">
	<fieldset class="bbp-form">
		<legend>{{ __('Log In', 'bbpress') }}</legend>

		<div class="bbp-username">
			<label for="user_login">{{ __('Username', 'bbpress') }}: </label>
			<input type="text" name="log" value="{{ function('bbp_sanitize_val','user_login','text') }}" size="20" id="user_login" tabindex="{{ function('bbp_tab_index') }}" />
		</div>

		<div class="bbp-password">
			<label for="user_pass">{{ __('Password', 'bbpress') }}: </label>
			<input type="password" name="pwd" value="{{ function('bbp_sanitize_val','user_pass','password') }}" size="20" id="user_pass" tabindex="{{ function('bbp_tab_index') }}" />
		</div>

		<div class="bbp-remember-me">
			<input type="checkbox" name="rememberme" value="forever" {{ function('checked',function('bbp_get_sanitize_val','rememberme','checkbox')) }} id="rememberme" tabindex="{{ function('bbp_tab_index') }}" />
			<label for="rememberme">{{ __('Keep me signed in', 'bbpress') }}</label>
		</div>

		{% do action('login_form') %}

		<div class="bbp-submit-wrapper">

			<button type="submit" tabindex="{{ function('bbp_tab_index') }}" name="user-submit" class="button submit user-submit">{{ __('Log In', 'bbpress') }}</button>

			{{ function('bbp_user_login_fields') }}

		</div>
	</fieldset>
</form>
