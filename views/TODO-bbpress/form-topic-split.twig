<div id="bbpress-forums">

	{{ function('bbp_breadcrumb') }}

	{% if function('is_user_logged_in') and function('current_user_can','edit_topic',function('bbp_get_topic_id')) %}

		<div id="split-topic-{{ function('bbp_topic_id') }}" class="bbp-topic-split">

			<form id="split_topic" name="split_topic" method="post" action="{{ function('the_permalink') }}">

				<fieldset class="bbp-form">

					<legend>{{ __('Split topic "%s"', 'bbpress')|format(function('bbp_get_topic_title')) }}</legend>

					<div>

						<div class="bbp-template-notice info">
							<p>{{ __('When you split a topic, you are slicing it in half starting with the reply you just selected. Choose to use that reply as a new topic with a new title, or merge those replies into an existing topic.', 'bbpress') }}</p>
						</div>

						<div class="bbp-template-notice">
							<p>{{ __('If you use the existing topic option, replies within both topics will be merged chronologically. The order of the merged replies is based on the time and date they were posted.', 'bbpress') }}</p>
						</div>

						<fieldset class="bbp-form">
							<legend>{{ __('Split Method', 'bbpress') }}</legend>

							<div>
								<input name="bbp_topic_split_option" id="bbp_topic_split_option_reply" type="radio" checked="checked" value="reply" tabindex="{{ function('bbp_tab_index') }}" />

								<label for="bbp_topic_split_option_reply">{{ __('New topic in <strong>%s</strong> titled:', 'bbpress')|format(function('bbp_get_forum_title',function('bbp_get_topic_forum_id',function('bbp_get_topic_id')))) }}</label>

								<input type="text" id="bbp_topic_split_destination_title" value="{{ __('Split: %s', 'bbpress')|format(function('bbp_get_topic_title')) }}" tabindex="{{ function('bbp_tab_index') }}" size="35" name="bbp_topic_split_destination_title" />
							</div>

							{% if function('bbp_has_topics', [{'show_stickies':false}, {'post_parent':function('bbp_get_topic_forum_id',function('bbp_get_topic_id'))}, {'post__not_in':[function('bbp_get_topic_id')]}] ) %}

								<div>
									<input name="bbp_topic_split_option" id="bbp_topic_split_option_existing" type="radio" value="existing" tabindex="{{ function('bbp_tab_index') }}" />
									<label for="bbp_topic_split_option_existing">{{ __('Use an existing topic in this forum:', 'bbpress') }}</label>

								{{ function('bbp_dropdown', [{'post_type':function('bbp_get_topic_post_type')}, {'post_parent':function('bbp_get_topic_forum_id',function('bbp_get_topic_id') )}, {'selected':'-1'}, {'exclude':function('bbp_get_topic_id')}, {'select_id':'bbp_destination_topic'}] )}}

								</div>

							{% endif %}

						</fieldset>

						<fieldset class="bbp-form">
							<legend>{{ __('Topic Extras', 'bbpress') }}</legend>

							<div>

								{% if function('bbp_is_subscriptions_active') %}

									<input name="bbp_topic_subscribers" id="bbp_topic_subscribers" type="checkbox" value="1" checked="checked" tabindex="{{ function('bbp_tab_index') }}" />
									<label for="bbp_topic_subscribers">{{ __('Copy subscribers to the new topic', 'bbpress') }}</label><br />

								{% endif %}

								<input name="bbp_topic_favoriters" id="bbp_topic_favoriters" type="checkbox" value="1" checked="checked" tabindex="{{ function('bbp_tab_index') }}" />
								<label for="bbp_topic_favoriters">{{ __('Copy favoriters to the new topic', 'bbpress') }}</label><br />

								{% if function('bbp_allow_topic_tags') %}

									<input name="bbp_topic_tags" id="bbp_topic_tags" type="checkbox" value="1" checked="checked" tabindex="{{ function('bbp_tab_index') }}" />
									<label for="bbp_topic_tags">{{ __('Copy topic tags to the new topic', 'bbpress') }}</label><br />

								{% endif %}

							</div>
						</fieldset>

						<div class="bbp-template-notice error">
							<p>{{ __('<strong>WARNING:</strong> This process cannot be undone.', 'bbpress') }}</p>
						</div>

						<div class="bbp-submit-wrapper">
							<button type="submit" tabindex="{{ function('bbp_tab_index') }}" id="bbp_merge_topic_submit" name="bbp_merge_topic_submit" class="button submit">{{ __('Submit', 'bbpress') }}</button>
						</div>
					</div>

					{{ function('bbp_split_topic_form_fields') }}

				</fieldset>
			</form>
		</div>

	{% else %}

		<div id="no-topic-{{ function('bbp_topic_id') }}" class="bbp-no-topic">
			<div class="entry-content">{{ function('is_user_logged_in') ? __('You do not have the permissions to edit this topic!', 'bbpress') : __('You cannot edit this topic.', 'bbpress') }}</div>
		</div>

	{% endif %}

</div>
