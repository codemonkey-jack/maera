{% if function('bbp_current_user_can_access_anonymous_user_form') %}

	{% do action('bbp_theme_before_anonymous_form') %}

	<fieldset class="bbp-form">

		<legend>{{ function('bbp_is_topic_edit') or function('bbp_is_reply_edit') ? __('Author Information', 'bbpress') : __('Your information:', 'bbpress') }}</legend>

		{% do action('bbp_theme_anonymous_form_extras_top') %}

		<p>
			<label for="bbp_anonymous_author">{{ __('Name (required):', 'bbpress') }}</label><br />
			<input type="text" id="bbp_anonymous_author" value="{{ function('bbp_author_display_name') }}" tabindex="{{ function('bbp_tab_index') }}" size="40" name="bbp_anonymous_name" />
		</p>

		<p>
			<label for="bbp_anonymous_email">{{ __('Mail (will not be published) (required):', 'bbpress') }}</label><br />
			<input type="text" id="bbp_anonymous_email" value="{{ function('bbp_author_email') }}" tabindex="{{ function('bbp_tab_index') }}" size="40" name="bbp_anonymous_email" />
		</p>

		<p>
			<label for="bbp_anonymous_website">{{ __('Website:', 'bbpress') }}</label><br />
			<input type="text" id="bbp_anonymous_website" value="{{ function('bbp_author_url') }}" tabindex="{{ function('bbp_tab_index') }}" size="40" name="bbp_anonymous_website" />
		</p>

		{% do action('bbp_theme_anonymous_form_extras_bottom') %}

	</fieldset>

	{% do action('bbp_theme_after_anonymous_form') %}

{% endif %}
