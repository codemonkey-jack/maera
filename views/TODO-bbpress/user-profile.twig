	{% do action('bbp_template_before_user_profile') %}

	<div id="bbp-user-profile" class="bbp-user-profile">
		<h2 class="entry-title">{{ __('Profile', 'bbpress') }}</h2>
		<div class="bbp-user-section">

			{% if function('bbp_get_displayed_user_field', 'description') %}

				<p class="bbp-user-description">{{ function('bbp_displayed_user_field', 'description') }}</p>

			{% endif %}

			<p class="bbp-user-forum-role">{{ __('Forum Role: %s', 'bbpress')|format(function('bbp_get_user_display_role')) }}</p>
			<p class="bbp-user-topic-count">{{ __('Topics Started: %s', 'bbpress')|format(function('bbp_get_user_topic_count_raw')) }}</p>
			<p class="bbp-user-reply-count">{{ __('Replies Created: %s', 'bbpress')|format(function('bbp_get_user_reply_count_raw')) }}</p>

		</div>
	</div><!-- #bbp-author-topics-started -->

	{% do action('bbp_template_after_user_profile') %}
