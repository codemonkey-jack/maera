{% extends "main.twig" %}
{% block content %}

<div class="content-wrapper">
	{% for post in posts %}
        {% if fn('post_password_required', post.ID) %}
            {% include ['content-protected.twig'] %}
        {% else %}
		{% include ['content-'~post.ID~'.twig', 'content-'~post.post_type~'.twig', 'content.twig'] %}
        {% endif %}
        {{ function( 'wp_link_pages', { 'before': '<div class="page-links" itemprop="pagination">' . __( 'Pages:', 'maera' ), 'after': '</div>' }) }}
		<div class="clearfix"></div>
	{% endfor %}
</div>

{% endblock %}
